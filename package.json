    "js-yaml": "^4.1.0",
    "mustache": "^4.2.0"
  },
  "devDependencies": {
    "@types/blessed": "^0.1.25",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.0",
    "concurrently": "^9.2.1",
    "ts-node": "^10.9.1",
    "tsx": "^4.20.6",
    "typescript": "^5.3.2",
    "vite": "^7.1.12"
  }
