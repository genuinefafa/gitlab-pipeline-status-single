{
  "name": "gitlab-pipeline-status",
  "version": "1.0.0",
  "description": "GitLab pipeline status monitor with tree view",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "lint": "npm run typecheck",
    "prestart": "npm run build",
    "start": "node dist/api-server.js",
    "dev": "npx tsx src/api-server.ts",
    "watch": "tsc -w"
